<android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="?android:attr/actionBarSize"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joshua.minuteminder.MainActivity$PlaceholderFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Minder status: "
            android:textAlignment="textEnd"
            android:textSize="15sp"/>

        <ToggleButton
            android:id="@+id/onOffToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ToggleButton" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Minder frequency set to every"
        android:layout_gravity="center|top"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:layout_marginTop="90dp">

        <NumberPicker
            android:id="@+id/minderFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"/>


        <Spinner
            android:id="@+id/frequencyUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginTop="80dp"
            android:entries="@array/unit_array">
        </Spinner>
    </LinearLayout>

    <!--Contains all the day toggle buttons-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center|top"
        android:layout_marginTop="50dp"
        android:paddingTop="230dp"
        android:paddingBottom="100dp">

        <!--The color toggle is code written first in in values/colors.xml file to create values for certain colors (this is where you should edit those colors if necessary) and then a specific file in res/drawable.-->
        <ToggleButton
            android:id="@+id/toggleMonday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="S"
            android:textOn="-S-"
            android:background="@drawable/redgraytoggle"/>
        <ToggleButton
            android:id="@+id/toggleTuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="M"
            android:textOn="-M-"
            android:background="@drawable/redgraytoggle"/>
        <ToggleButton
            android:id="@+id/toggleWednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="T"
            android:textOn="-T-"
            android:background="@drawable/redgraytoggle"/>
        <ToggleButton
            android:id="@+id/toggleThursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="W"
            android:textOn="-W-"
            android:background="@drawable/redgraytoggle"/>
        <ToggleButton
            android:id="@+id/toggleFriday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="T"
            android:textOn="-T-"
            android:background="@drawable/redgraytoggle"/>
        <ToggleButton
            android:id="@+id/toggleSaturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="F"
            android:textOn="-F-"
            android:background="@drawable/redgraytoggle"/>
        <ToggleButton
            android:id="@+id/toggleSunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="S"
            android:textOn="-S-"
            android:background="@drawable/redgraytoggle"/>
    </LinearLayout>

    <Button
        android:id="@+id/updateMinderButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="25dp"
        android:text="Update Minder" />




</android.support.design.widget.CoordinatorLayout>
